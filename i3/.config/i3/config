for_window [class="Evince"] border pixel 3
for_window [class="(?i)gnome"] border pixel 3
for_window [class="Gcolor3"] border pixel 3

for_window [class="Gnome-calendar"] floating enable
for_window [class="mpv"] floating enable
for_window [class="Ulauncher"] floating enable
for_window [class="Gcolor3"] floating enable
for_window [class="Gnome-calculator"] floating enable
for_window [title="^About.*"] floating enable

for_window [title="GLava"] move container to workspace $ws9

for_window [title=".*Emulator.*"] floating enable, move container to workspace $ws8

for_window [class="Virt-manager"] move container to workspace $ws8, layout tabbed, focus
for_window [class="VirtualBox Manager"] move container to workspace $ws8, layout tabbed, focus
for_window [class="VirtualBox"] move container to workspace $ws8, layout tabbed, focus
for_window [class="Vmplayer"] move container to workspace $ws8, layout tabbed, focus

for_window [class="KotatogramDesktop"] move container to workspace $ws5

for_window [class="Unity"] move container to workspace $ws3, layout tabbed
for_window [class="UnityHub"] move container to workspace $ws3, layout tabbed, focus

for_window [class="jetbrains-rider"] move container to workspace $ws3, layout tabbed, focus
for_window [title="win0"] move container to workspace $ws3, floating enable
for_window [class="realvnc-vncviewer"] move container to workspace $ws7, layout tabbed, focus

for_window [class=".exe$"] move container to workspace $ws10, focus
for_window [class="Lutris"] move container to workspace $ws10, focus

for_window [class="flameshot"] floating enable

