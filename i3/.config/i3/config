#  ___ _____    ____ ___  _   _ _____ ___ ____ 
#	|_ _|___ /   / ___/ _ \| \ | |  ___|_ _/ ___|
#	 | |  |_ \  | |  | | | |  \| | |_   | | |  _ 
#	 | | ___) | | |__| |_| | |\  |  _|  | | |_| |
#	|___|____/   \____\___/|_| \_|_|   |___\____|
#

# alt
set $mod Mod1 
# super
set $sup Mod4 

# font for window titles
font pango:System San Francisco Display 11

# disable titlebar
default_border pixel 3
default_floating_border pixel 3 

# gaps
gaps inner 20
gaps outer 0

# colors
set $bg-color 	         #75A1FF
set $inactive-bg-color   #272a34
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #ec407a

set $bar-color   #272a34

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          $bg-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $urgent-bg-color

# force window decorations
hide_edge_borders both
focus_follows_mouse no

#	 ____ _____  _    ____ _____ _   _ ____  
#	/ ___|_   _|/ \  |  _ \_   _| | | |  _ \ 
#	\___ \ | | / _ \ | |_) || | | | | | |_) |
#	 ___) || |/ ___ \|  _ < | | | |_| |  __/ 
#	|____/ |_/_/   \_\_| \_\|_|  \___/|_|
#	

# set screen position
exec --no-startup-id ~/.screenlayout/layout.sh 

# add picom for shadows and animtaions
exec --no-startup-id picom --experimental-backends --backend glx -b

# set wallpaper
exec_always --no-startup-id hsetroot -solid #000000
exec_always --no-startup-id nitrogen --restore

# start polkit
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# notification daemon
exec --no-startup-id dunst

# Start clipster daemon
exec --no-startup-id clipster -d

# start applets
exec --no-startup-id nm-applet 
exec --no-startup-id optimus-manager-qt
exec --no-startup-id kdeconnect-indicator

# conky clock widget
exec_always --no-startup-id ~/.conky/conky-startup.sh

#add glava
#exec_always --no-startup-id pkill glava ; sleep 4 && glava --desktop 

#enable num lock 
exec_always --no-startup-id numlockx


#bar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

exec --no-startup-id ulauncher --hide-window
exec --no-startup-id emote

#exec_always --no-startup-id autotiling
exec_always --no-startup-id ~/.config/i3/alternating_layouts.py


#increase key speed via rate change
exec --no-startup-id xset r rate 300 50


#	 _  _________   ______ ___ _   _ ____  ____  
#	| |/ / ____\ \ / / __ )_ _| \ | |  _ \/ ___| 
#	| ' /|  _|  \ V /|  _ \| ||  \| | | | \___ \ 
#	| . \| |___  | | | |_) | || |\  | |_| |___) |
#	|_|\_\_____| |_| |____/___|_| \_|____/|____/ 
#

bindsym $mod+Tab exec --no-startup-id ~/.config/i3/i3-cycle-windows 
bindsym Mod1+Shift+Tab workspace next

# Use pactl to adjust volume in PulseAudio.
set $show_volume_notification ~/.config/i3/notify_volume.sh
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5 && $show_volume_notification 
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5 && $show_volume_notification 
bindsym XF86AudioMute exec --no-startup-id pamixer -t && $show_volume_notification 

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $sup+Return exec i3-sensible-terminal
bindsym $mod+Return exec i3-sensible-terminal

#open uni schedule
bindsym $sup+r exec --no-startup-id xdg-open ~/.cache/schedule.pdf

# close focused window
bindsym $sup+Shift+c kill
# murder focused window
bindsym $sup+Shift+x exec --no-startup-id bash -c '[[ `xdotool getwindowfocus getwindowname` != "i3" ]] && xdotool getwindowfocus windowkill'

# lock screen
bindsym $sup+l exec --no-startup-id cinnamon-screensaver-command --lock


# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1, workspace number $ws1, focus
bindsym $mod+Shift+2 move container to workspace number $ws2, workspace number $ws2, focus
bindsym $mod+Shift+3 move container to workspace number $ws3, workspace number $ws3, focus
bindsym $mod+Shift+4 move container to workspace number $ws4, workspace number $ws4, focus
bindsym $mod+Shift+5 move container to workspace number $ws5, workspace number $ws5, focus
bindsym $mod+Shift+6 move container to workspace number $ws6, workspace number $ws6, focus
bindsym $mod+Shift+7 move container to workspace number $ws7, workspace number $ws7, focus
bindsym $mod+Shift+8 move container to workspace number $ws8, workspace number $ws8, focus
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10, workspace number $ws10, focus

# resizing windows
bindsym $mod+Ctrl+Right resize grow width 10 px or 10 ppt
bindsym $mod+Ctrl+Up resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+Down resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+Left resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+l resize grow width 10 px or 10 ppt
bindsym $mod+Ctrl+k resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+j resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+h resize shrink width 10 px or 10 ppt

# brightness notifications
set $show_bright_notification ~/.config/i3/notify_brightness.sh
bindsym XF86MonBrightnessUp exec light -A  10 && $show_bright_notification
bindsym XF86MonBrightnessDown exec light -U 10 && $show_bright_notification

# move workspaces between monitors
bindsym $mod+Shift+Ctrl+l move workspace to output left
bindsym $mod+Shift+Ctrl+h move workspace to output right
bindsym $mod+Shift+Ctrl+Left move workspace to output left
bindsym $mod+Shift+Ctrl+Right move workspace to output right

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# toggle window transparency with picom
bindsym $mod+Shift+t exec --no-startup-id ps -e | grep picom && pkill picom || picom --experimental-backends --backend glx -b

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# personal bindings
include ~/.other/i3/bindings.conf
bindsym $sup+f exec --no-startup-id firefox-developer-edition
bindsym $sup+t exec --no-startup-id kotatogram-desktop
bindsym $sup+v exec --no-startup-id firefox-developer-edition "ext+container:name=Social&url=https://vk.com"
bindsym $sup+y exec --no-startup-id firefox-developer-edition "ext+container:name=Personal&url=https://youtube.com"
bindsym $sup+Shift+g exec --no-startup-id firefox-developer-edition "ext+container:name=Personal&url=https://mail.google.com"
bindsym $sup+d exec --no-startup-id nemo ~/Downloads
bindsym $sup+e exec --no-startup-id nemo
bindsym $sup+q exec --no-startup-id echo nothing

# name='Screenshot area'
bindsym shift+Print exec --no-startup-id flameshot gui
# name='Screenshot'
bindsym Print exec --no-startup-id flameshot full -p ~/Pictures


# __        _____ _   _ ____   _____        ______  
